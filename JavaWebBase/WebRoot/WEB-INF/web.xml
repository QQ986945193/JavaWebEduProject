	<servlet>
		<servlet-name>CheckGenericServlet</servlet-name>
		<servlet-class>com.qq986945193.javaweb.servlet.day09.servlet01.CheckGenericServlet</servlet-class>
		<init-param>
			<param-name>woshiCheckGenericServlet</param-name>
