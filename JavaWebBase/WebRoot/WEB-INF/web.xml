<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<!--CatServletMethodServlet的配置 -->
	<servlet>
		<servlet-name>CatServletMethodServlet</servlet-name>
		<servlet-class>com.qq986945193.javaweb.servlet.day09.servlet01.CatServletMethodServlet</servlet-class>
		<init-param>
			<param-name>CatServletMethodServlet</param-name>
			<param-value>http://localhost:8080/JavaWebBase/CatServletMethodServlet</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>CatServletMethodServlet</servlet-name>
		<url-pattern>/CatServletMethodServlet</url-pattern>
	</servlet-mapping>
	<!--GetDataServlet -->
	<servlet>
		<!-- 配置servlet的name,随便填写 -->
		<servlet-name>GetDataServlet</servlet-name>
		<!-- servlet指定的类 -->
		<servlet-class>com.qq986945193.javaweb.servlet.day09.servlet02.GetDataServlet</servlet-class>
		<!-- 配置启动服务器后立即加载此servlet -->
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<!-- 配置访问得了名称与路径 -->
		<servlet-name>GetDataServlet</servlet-name>
		<url-pattern>/GetDataServlet</url-pattern>
	</servlet-mapping>
	<!--SetDataServlet -->
	<servlet>
		<servlet-name>SetDataServlet</servlet-name>
